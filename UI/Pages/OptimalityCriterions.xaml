<Page x:Class="UI.Pages.OptimalityCriterions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OptimalityCriterions">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="labelsPanel" Grid.Column="0"/>
        <StackPanel x:Name="textBoxPanel" Grid.Column="1"/>
        <Button x:Name="btnSave" Content="Сохранить изменения" Grid.Row="1" Grid.Column="1" Click="btnSave_Click"/>
    </Grid>
</Page>